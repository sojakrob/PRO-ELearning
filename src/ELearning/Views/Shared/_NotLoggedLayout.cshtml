<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>

    <link href="@Url.Content("~/Content/favicon.png")" rel="shortcut icon" type="image/png" />
    <link href="@Url.Content("~/Content/favicon.png")" rel="icon" type="image/png" />
    <link href="@Url.Content("~/Content/favicon.ico")" rel="shortcut icon" type="image/x-icon" />
    <link href="@Url.Content("~/Content/favicon.ico")" rel="icon" type="image/x-icon" />
</head>

<body class="index">
    <div id="top">
       @{
            Html.RenderAction("HeaderControl", "Controls");
        }
    </div>

    <div id="frameWrapper">
        <div id="frame">
            @RenderBody()
        </div>
    </div>

    <div id="footer">
    </div>
</body>
</html>

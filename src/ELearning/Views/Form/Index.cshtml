@using ELearning.Utils
@model IEnumerable<ELearning.Models.Data.FormModel>
@{
    ViewBag.Title = "Testy";   
}
<p>
    @Html.ButtonLink("Create New", "Create")
</p>
<table class="datagrid">
    <tr>
        <th>
            Name
        </th>
        <th>
            Text
        </th>
        <th>
            Created
        </th>
        <th>
            Type
        </th>
        <th>
            Author
        </th>
        <th>
        </th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.ActionLink(item.Name, "Edit", new { id = item.ID })
            </td>
            <td>
                @item.Text
            </td>
            <td>
                @ELearning.Utils.Formatting.FormatAsDate(item.Created)
            </td>
            <td>
                @item.Type.Name
            </td>
            <td>
                @item.Author.Name
            </td>
            <td>        
                @if (ViewBag.CurrentUserModel.Permissions.Form_Delete
                    || ViewBag.CurrentUserModel.ID == item.Author.ID)
                {
                    @Html.ButtonLink("X", "Delete", new { id = item.ID })
                }
            </td>
        </tr>
    }
</table>

@using ELearning.Utils
@model ELearning.Models.FormInstancesModel

@{
    ViewBag.Title = "Test";
}

<p>@Model.Form.Type.Name</p>

<h2>@Model.Form.Name</h2>

<p>@Model.Form.Text</p>

@if (Model.Form.TimeToFill != null)
{
    <p>Time to fill: @Model.Form.TimeToFill</p>
}

<p>Questions: @Model.Form.QuestionGroups.Count</p>

<p>Filled: @Model.FormInstances.Count times</p>

@Html.ButtonLink("Start", "StartForm", new { id = Model.Form.ID })


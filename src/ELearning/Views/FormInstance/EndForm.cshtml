@using ELearning.Utils
@model bool

@{
    Layout = "";
}

<html>
<head>

    <title>@Html.ResourceString("FormFillingEnded")</title>

    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>

    <link href="@Url.Content("~/Content/favicon.png")" rel="shortcut icon" />
    <link href="@Url.Content("~/Content/favicon.png")" rel="icon" type="image/png" />

</head>
<body>

@if (Model)
{
    <h2>@Html.ResourceString("SuccessfulySubmited")</h2>
}
else
{
    <h2>@Html.ResourceString("ErrorOccured")</h2>
}


<input 
    class="Button" 
    type="button"
    title="@ELearning.Localization.GetResourceString("CloseWindow")"
    value="@ELearning.Localization.GetResourceString("Close")"
    onclick="@string.Format("window.close()")"
    />

</body>
</html>
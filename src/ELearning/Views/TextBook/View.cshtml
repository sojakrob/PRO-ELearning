@model ELearning.Models.Data.TextBookModel
@{
    ViewBag.Title = Model.Title;
    if (Model.CreatedBy.ID == ViewBag.CurrentUserModel.ID || ViewBag.CurrentUserModel.Permissions.TextBook_CreateEdit_All)
    {
        ViewBag.TopButtons = new[] 
        { 
            new ELearning.Models.GeneralView.TopButtonModel(
                ELearning.Localization.GetResourceString("Edit"),
                "Edit", 
                "TextBook",
                new {id = Model.ID}, 
                null)
        };
    }
}

<div id="TextBook">
    @Html.Raw(Model.Html)
</div>
